@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card border-dark text-center">
            <div class="card-header">
                Let's get Started
            </div>
            <div class="card-body">
                <form>
                    <div class="form-group row">
                        <label for="playerCount" class="col-sm-2 col-form-label">No. of Players</label>
                        <div class="col-sm-3">
                            <input type="number" class="form-control" id="noOfPlayers" placeholder="Enter number of players">
                            <span hidden class="text-danger float-left" id="playerCountValidNumber">Enter a valid number</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="buyIn" class="col-sm-2 col-form-label">Buy-In $</label>
                        <div class="input-group mb-2 col-sm-3">
                            <div class="input-group-prepend">
                                <div class="input-group-text">$</div>
                            </div>
                            <input type="number" class="form-control" id="buyIn" placeholder="Enter buy-in amount">
                            <span hidden class="text-danger" id="buyInValidNumber">Enter a valid number</span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-muted">
                <button type="button" onclick="validateAndSubmit()" class="btn btn-primary">Next</button>
            </div>
        </div>

    </div>

</div>

<!-- #region submission forms-->
<form action="/Home/PlayerList" method="post" id="frmPlayerList" name="frmPlayerList">
    <input type="hidden" name="playerCount" id="playerCount" value="" />
    <input type="hidden" name="buyInAmount" id="buyInAmount" value="" />
</form>
<!-- #endregion -->

<script type="text/javascript">    
    //validate playerCount and buyIn$ on submit
    function validateAndSubmit() {
        var playerCount = $('#noOfPlayers').val();
        var buyInAmount = $('#buyIn').val();
        var error = false;
        if (playerCount == "") {
            $('#playerCountValidNumber').removeAttr("hidden");
            error = true;
        }
        else {
            $('#playerCountValidNumber').attr("hidden", true);
            $('#playerCount').val(playerCount);
        }
        if (buyInAmount == "") {
            $('#buyInValidNumber').removeAttr("hidden");
            error = true;
        }
        else {
            $('#buyInValidNumber').attr("hidden", true);
            $('#buyInAmount').val(buyInAmount);
        }
        if (error) {
            return false;
        }
        else {
            $('#frmPlayerList').submit();
        }
    }
</script>
